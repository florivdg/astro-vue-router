<style>
  main {
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    color: #2563eb;
    margin-bottom: 1rem;
  }

  .demo-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
