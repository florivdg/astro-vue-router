    text-decoration: none;
    transition: all 0.2s;
    background: white;
  }

  .demo-link:hover {
    border-color: #2563eb;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.1);
  }

  .demo-link h3 {
    margin: 0 0 0.5rem 0;
    color: #1f2937;
  }

  .demo-link p {
